---
export interface Props {
  title: string;
  benefits: Array<{
    icon: string;
    title: string;
    description: string;
  }>;
}

const { title, benefits } = Astro.props;
---

<section class="py-20 bg-dark-950 relative overflow-hidden">
  <!-- Background Elements -->
  <div class="absolute inset-0">
    <div class="absolute top-1/4 right-0 w-96 h-96 bg-primary-500/10 rounded-full blur-3xl"></div>
    <div class="absolute bottom-1/4 left-0 w-72 h-72 bg-secondary-500/10 rounded-full blur-3xl"></div>
  </div>

  <div class="relative z-10 container mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Section Header -->
    <div class="text-center mb-16 animate-slide-up">
      <h2 class="text-3xl sm:text-4xl font-bold text-white mb-6">
        {title}
      </h2>
      <div class="w-24 h-1 bg-gradient-to-r from-primary-500 to-secondary-500 mx-auto rounded-full"></div>
    </div>

    <!-- Benefits Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {benefits.map((benefit, index) => (
        <div 
          class="group bg-dark-900/30 backdrop-blur-sm border border-gray-800 rounded-2xl p-8 text-center hover:bg-dark-800/50 hover:border-primary-500/50 transition-all duration-300 hover:scale-105 hover:shadow-xl hover:shadow-primary-500/10 animate-fade-in"
          style={`animation-delay: ${index * 0.1}s`}
        >
          
          {/* <!-- Icon --> */}
          <div class="mb-6">
            <div class="w-16 h-16 bg-gradient-to-r from-primary-500/20 to-secondary-500/20 rounded-2xl flex items-center justify-center mx-auto group-hover:scale-110 transition-transform duration-300 border border-primary-500/30">
              <span set:html={benefit.icon} class="w-8 h-8 text-primary-400"></span>
            </div>
          </div>
          
          {/* <!-- Content --> */}
          <h3 class="text-xl font-bold text-white mb-4 group-hover:text-primary-100 transition-colors duration-200">
            {benefit.title}
          </h3>
          
          <p class="text-gray-300 leading-relaxed">
            {benefit.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>