<section id="servicios" class="scroll-mt-16 py-20 lg:py-20 relative">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold mb-6">
        <span class="bg-gradient-to-r from-white to-gray-300 bg-clip-text text-transparent">
          Servicios que
        </span>
        <br>
        <span class="bg-gradient-to-r from-primary-400 to-primary-600 bg-clip-text text-transparent">
          transforman negocios
        </span>
      </h2>
      <p class="text-xl text-gray-300 max-w-3xl mx-auto leading-relaxed">
        Ofrecemos soluciones digitales completas que combinan tecnología de vanguardia 
        con estrategia empresarial para impulsar tu crecimiento.
      </p>
    </div>

    <!-- Services Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {services.map((service, index) => (
        <div 
          class="group bg-dark-900/50 backdrop-blur-sm border border-dark-900 rounded-2xl p-8 hover:bg-dark-800/50 hover:border-primary-600/50 transition-all duration-300 hover:scale-105 hover:shadow-xl hover:shadow-primary-600/10"
          style={`animation-delay: ${index * 0.1}s`}
        >
          <!-- Icon -->
          <div class="text-primary-400 mb-6 group-hover:text-primary-300 transition-colors duration-200">
            <Fragment set:html={service.icon} />
          </div>

          <!-- Title -->
          <h3 class="text-xl font-bold text-white mb-4 group-hover:text-primary-100 transition-colors duration-200">
            {service.title}
          </h3>

          <!-- Description -->
          <p class="text-gray-300 mb-6 leading-relaxed">
            {service.description}
          </p>

          <!-- Features -->
          <ul class="space-y-2">
            {service.features.map((feature) => (
              <li class="flex items-center text-sm text-gray-400">
                <svg class="w-4 h-4 text-primary-400 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                {feature}
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <!-- CTA Section -->
    <div class="text-center mt-10 w-fit m-auto">
      <a 
        href="/servicios"
        class="nav-link justify-center"
      >
        Ver todos los servicios
        <!-- <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg> -->
      </a>
    </div>
  </div>
</section>

